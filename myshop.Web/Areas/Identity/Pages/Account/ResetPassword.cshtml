@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    // Optional: Set layout if needed
    // Layout = "/Pages/Shared/_Layout.cshtml";
}

@* Container to center the card vertically and horizontally *@
<div class="container d-flex align-items-center justify-content-center" style="min-height: 70vh; margin: 10vh">

    <div class="card shadow-sm" style="max-width: 450px; width: 100%;">
        @* Card styling *@
        <div class="card-body p-4 p-md-5">

            <h1 class="card-title text-center h3 fw-bold mb-3">@ViewData["Title"]</h1>
            <p class="text-center text-muted mb-4">Please enter your email and choose a new password.</p>

            <form method="post">
                @* Display general validation errors *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                @* Hidden field for the reset code - essential for the process *@
                <input asp-for="Input.Code" type="hidden" />

                @* Email Input Field (Standard Label/Input) *@
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Enter your email address" />
                    <span asp-validation-for="Input.Email" class="text-danger d-block mt-1"></span>
                </div>

                @* New Password Input Field *@
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter new password" />
                    <span asp-validation-for="Input.Password" class="text-danger d-block mt-1"></span>
                </div>

                @* Confirm New Password Input Field *@
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm new password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger d-block mt-1"></span>
                </div>

                @* Submit Button *@
                <button type="submit" class="w-100 btn btn-primary btn-lg fw-bold mt-4">Reset Password</button>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

