@page
@model ResetPasswordConfirmationModel // Make sure this matches your PageModel class name
@{
    ViewData["Title"] = "Password Reset Successful"; // More affirmative title
    // Optional: Set layout if needed
    // Layout = "/Pages/Shared/_Layout.cshtml";
}

@* Container to center the card vertically and horizontally *@
<div class="container d-flex align-items-center justify-content-center" style="min-height: 70vh; margin-bottom: 5vh">

    <div class="card shadow-sm text-center" style="max-width: 500px; width: 100%;">
        @* Card styling *@
        <div class="card-body p-4 p-md-5">

            @* Success Icon (Requires Font Awesome) *@
            <div class="mb-4">
                <i class="fas fa-check-circle fa-3x text-success"></i>
            </div>

            <h1 class="card-title h3 fw-bold mb-3">@ViewData["Title"]</h1>

            <p class="card-text text-muted mb-4">
                Your password has been updated. You can now log in using your new password.
            </p>

            <hr class="my-4">

            @* Make the login link a prominent button *@
            <div class="d-grid gap-2">
                @* Use d-grid for a full-width button feel *@
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg fw-bold">Proceed to Login</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
@* Usually no scripts needed here *@
}

