@page
@model ForgotPasswordConfirmation // Ensure your model name matches
@{
    ViewData["Title"] = "Check Your Email"; // Updated title for clarity
    // Optional: Set layout if needed
    // Layout = "/Pages/Shared/_Layout.cshtml";
}

@* Container to center the card vertically and horizontally *@
<div class="container d-flex align-items-center justify-content-center" style="min-height: 70vh; margin-bottom: 5vh">

    <div class="card shadow-sm text-center" style="max-width: 500px; width: 100%;"> @* Card styling *@
        <div class="card-body p-4 p-md-5">

            @* Icon indicating email sent (Requires Font Awesome) *@
            <div class="mb-4">
                <i class="fas fa-envelope-open-text fa-3x text-primary"></i>
            </div>

            <h1 class="card-title h3 fw-bold mb-3">@ViewData["Title"]</h1>

            <p class="card-text text-muted mb-4">
                We've sent an email with instructions to reset your password, provided an account exists with the address you entered. Please check your inbox and spam folder.
            </p>

            <hr class="my-3">

            <p class="card-text small text-muted">
                If you don't receive the email within a few minutes, please check your spam folder or try requesting the reset again.
            </p>

            <div class="mt-4">
                 @* Link back to the Login page or Homepage *@
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-secondary">Return to Login</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @* Usually no scripts needed here, but keep section if your layout requires it *@
}

