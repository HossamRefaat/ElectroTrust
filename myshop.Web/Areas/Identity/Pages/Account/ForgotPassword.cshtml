@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Your Password?";
    // Optional: Set layout if needed
    // Layout = "/Pages/Shared/_Layout.cshtml";
}

@* Container to center the card vertically and horizontally *@
<div class="container d-flex align-items-center justify-content-center" style="min-height: 70vh; margin-bottom: 5vh">

    <div class="card shadow-sm" style="max-width: 450px; width: 100%;">
        @* Card styling, similar to login *@
        <div class="card-body p-4 p-md-5">

            <h1 class="card-title text-center h3 fw-bold mb-3">@ViewData["Title"]</h1>
            <p class="text-center text-muted mb-4">Enter the email address associated with your account, and we'll send you a link to reset your password.</p>

            <form method="post">
                @* Display general validation errors *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                @* Email Input Field (Standard Label/Input) *@
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Enter your email address" />
                    <span asp-validation-for="Input.Email" class="text-danger d-block mt-1"></span> @* Ensure validation message displays correctly *@
                </div>

                @* Submit Button *@
                <button type="submit" class="w-100 btn btn-primary btn-lg fw-bold mt-4">Send Password Reset Link</button>
            </form>

            <hr class="my-4">

            @* Optional: Link back to Login page *@
            <div class="text-center">
                Remember your password? <a asp-page="./Login">Log In</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

