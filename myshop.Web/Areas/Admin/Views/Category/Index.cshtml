@model IEnumerable<Category>

@{
    ViewBag.PageTitle = "Category Mangment";
    ViewBag.CardTitle = "Browse Category";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div style="margin:5px">
    <a class="btn btn-primary" href="/Admin/Category/Create">Create</a>
</div>

<table class="table table-hover" width="100%">
    <thead class="text-bold">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Date Created</td>
        <td>Operations</td>
    </tr>
    </thead>
    <tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@Html.Raw(item.Description)</td>
                <td>@item.CreationTime</td>
                <td>
                    <a href="/Admin/Category/Edit/@item.Id" class="btn btn-success">Edit</a>
                    <a href="/Admin/Category/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tr>

</table>