@model int // Use the int model from the Razor view to get the Order ID

@section Styles {
    <style>
        /* Styles from the static HTML confirmation page */
        .confirmation-container {
            max-width: 700px; /* Adjust width as needed */
            margin: 3rem auto; /* Center vertically and horizontally */
        }

        .confirmation-icon {
            font-size: 4rem; /* Make the check icon larger */
            color: #198754; /* Bootstrap success green */
        }

        .order-details-summary {
            background-color: #f8f9fa; /* Light background */
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            text-align: left; /* Ensure text is left-aligned */
        }

            .order-details-summary h5 {
                margin-bottom: 0.75rem; /* More space below headings */
            }

            .order-details-summary p {
                margin-bottom: 0.25rem; /* Less space between address lines */
                line-height: 1.4;
            }
    </style>
}

@* --- Main Confirmation Content --- *@
<div class="container confirmation-container text-center">
    <div class="card shadow-sm">
        <div class="card-body p-4 p-md-5">
            <div class="confirmation-icon mb-3">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1 class="h2 fw-bold mb-3">Thank You For Your Order!</h1>
            <p class="lead mb-4">Your order has been placed successfully.</p>

            <div class="alert alert-success" role="alert">
                @* Inject the dynamic Order ID here *@
                Your Order Number is: <strong class="fw-bold">#@Model</strong>
            </div>

            <div class="mt-4 pt-2 d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" role="button" class="btn btn-primary btn-lg px-4 gap-3">
                    <i class="fas fa-shopping-bag me-1"></i> Continue Shopping
                </a> 
            </div>
        </div>
    </div>
</div>