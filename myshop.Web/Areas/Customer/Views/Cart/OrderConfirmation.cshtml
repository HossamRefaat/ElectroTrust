@model int // Use the int model from the Razor view to get the Order ID

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation - Clone E-Commerce</title>

    @* Link to your site's base CSS if needed *@
    @* <link rel="stylesheet" type="text/css" href="~/css/styles.css"> *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/f4e855eb8f.js" crossorigin="anonymous"></script>

    <style>
        /* Styles from the static HTML confirmation page */
        .confirmation-container {
            max-width: 700px; /* Adjust width as needed */
            margin: 3rem auto; /* Center vertically and horizontally */
        }

        .confirmation-icon {
            font-size: 4rem; /* Make the check icon larger */
            color: #198754; /* Bootstrap success green */
        }

        .order-details-summary {
            background-color: #f8f9fa; /* Light background */
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            text-align: left; /* Ensure text is left-aligned */
        }

            .order-details-summary h5 {
                margin-bottom: 0.75rem; /* More space below headings */
            }

            .order-details-summary p {
                margin-bottom: 0.25rem; /* Less space between address lines */
                line-height: 1.4;
            }
    </style>
</head>
<body>
    @* --- Main Confirmation Content --- *@
    <div class="container confirmation-container text-center">
        <div class="card shadow-sm">
            <div class="card-body p-4 p-md-5">
                <div class="confirmation-icon mb-3">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h1 class="h2 fw-bold mb-3">Thank You For Your Order!</h1>
                <p class="lead mb-4">Your order has been placed successfully.</p>

                <div class="alert alert-success" role="alert">
                    @* Inject the dynamic Order ID here *@
                    Your Order Number is: <strong class="fw-bold">#@Model</strong>
                </div>

                <div class="mt-4 pt-2 d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" role="button" class="btn btn-primary btn-lg px-4 gap-3">
                        <i class="fas fa-shopping-bag me-1"></i> Continue Shopping
                    </a> 
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

</body>
</html>